{% extends 'base.html.twig' %}

{% block title %}La Passerelle - Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="mb-3">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword, {
                            'label': 'Mot de passe',
                            'attr': {'class': 'form-control', 'required': 'required'}
                        }) }}
                    </div>
                    <div class="form-check mb-3">
                        {{ form_row(registrationForm.agreeTerms, {'label': 'J\'accepte les termes et conditions', 'attr': {'class': 'form-check-input', 'required': 'required'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
