{% extends 'base.html.twig' %}

{% block title %}La Passerelle - Salle de cours{% endblock %}

{% block body %}
    <div class="mb-3">
        <a class="btn btn-primary" href="{{ path('app_classroom_new') }}">Ajouter une salle de cours</a>
    </div>
    <div class="table-responsive mb-4">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Capacité</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for classroom in classrooms %}
                    <tr>
                        <td>{{ classroom.name }}</td>
                        <td>{{ classroom.capacity }}</td>
                        <td>
                            <a href="{{ path('app_classroom_show', {id:classroom.id}) }}"><span class="btn btn-info fa fa-eye"></span></a>
                            <a href="{{ path('app_classroom_edit', {id:classroom.id}) }}"><span class="btn btn-warning fa fa-edit"></span></a>
                            <a href="{{ path('app_classroom_delete', {id:classroom.id}) }}"><span class="btn btn-danger fa fa-trash"></span></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
