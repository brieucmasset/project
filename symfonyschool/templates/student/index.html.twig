{% extends 'base.html.twig' %}

{% block title %}La Passerelle - Étudiants
{% endblock %}

{% block body %}
	<div class="mb-3">
		<a class="btn btn-primary" href="{{ path('app_student_add') }}">Ajouter un étudiant</a>
	</div>
	<div class="table-responsive mb-4">
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Adresse</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
                {% for row in listStudent %}
				<tr>
					<td>{{ row.firstname }}</td>
					<td>{{ row.lastname }}</td>
					<td>{{ row.address }}</td>
					<td>
                        <a href="{{ path('app_student_details', {id:row.id}) }}"><span class="btn btn-info fa fa-eye"></span></a>
                        <a href="{{ path('app_student_edit', {id:row.id}) }}"><span class="btn btn-warning fa fa-edit"></span></a>
                        <a href="{{ path('app_student_delete', {id:row.id}) }}"><span class="btn btn-danger fa fa-trash"></span></a>
                    </td>
				</tr>
                {% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
